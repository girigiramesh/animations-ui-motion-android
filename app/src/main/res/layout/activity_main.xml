<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictures"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/grid_padding"
    app:columnCount="3"
    app:rowCount="3"
    app:useDefaultMargins="true">

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/chrysanthemum"
        android:src="@drawable/chrysanthemum" />

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/desert"
        android:src="@drawable/desert" />

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/hydrangeas"
        android:src="@drawable/hydrangeas" />

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/jellyfish"
        android:src="@drawable/jellyfish"
        app:layout_columnSpan="2" />

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/penguins"
        android:src="@drawable/penguins" />

    <com.meaningful_ui_motion.PictureView
        style="@style/PictureView"
        android:contentDescription="@string/tulips"
        android:src="@drawable/tulips"
        app:layout_columnSpan="3" />
</android.support.v7.widget.GridLayout>